pipeline {
    agent any
    options {
        skipDefaultCheckout(true)
    }
    environment {

        myVar = "Build number is ${env.BUILD_NUMBER}"
        hatem = 'This is a multi-line'

    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/spacehz/jenkins-project', branch: 'main'
                sh "ls -ltr"
                sh "pwd"
            }
        }
        stage('Setup') {
            steps {
        sh '''
          echo "${env.BUILD_NUMBER} on $(env.EXECUTOR_NUMBER)"
          python3 -m venv venv
          . venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
            }
        }
        stage('Test') {
            steps {
                // sh "pytest"
                // sh "whoami"
        sh '''
          python3 -m venv venv
          . venv/bin/activate
          pytest
          whoami
         
        '''

            }
        }
        // stage('Login to docker hub') {
        //     steps {
        //         withCredentials([string(credentialsId: 'dockerhubpwd', variable: 'dockerhubpwd')]) {
        //         sh 'echo ${dockerhubpwd} | docker login -u sanjeevkt720 --password-stdin'}
        //         echo 'Login successfully'
        //     }
        // }
        // stage('Build Docker Image')
