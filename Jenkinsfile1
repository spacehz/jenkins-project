pipeline {
    agent any
    options {
        skipDefaultCheckout(true)
    }
    environment {

        // myVar = "Build number is ${env.BUILD_NUMBER}"
        // hatem = 'This is a multi-line'
        // DB_HOST = 'localhost'
        // DB_PORT = '5432'
        // PASSWORD=   'mysecretpassword'
        // SERVER_CREDS = credentials('server-creds') //firt way to to use credentials
        IMAGE_NAME = 'spacehz/jenkins-flask-app'
        IMAGE_TAG = "${IMAGE_NAME}:${env.GIT_COMMIT}"



    }
    // parameters {
    //     string(name: 'IMAGE_TAG', defaultValue: 'sanjeevkt720/jenkins-project:latest', description: 'Docker Image Tag')
    // }
    stages {
        stage('Checkout') {
            steps {
                // withCredentials([usernamePassword(credentialsId: 'server-creds', usernameVariable: 'SERVER_CREDS_USR', passwordVariable: 'SERVER_CREDS_PSW')]) {
                //   echo "server user is ${SERVER_CREDS_USR}"
                //   echo "server password is ${SERVER_CREDS_PSW}"
                // }
                // git url: 'https://github.com/spacehz/jenkins-project', branch: 'main'
                checkout scm 
                sh "ls -ltr"
                sh "pwd"
                echo "${env.BUILD_NUMBER} on ${env.EXECUTOR_NUMBER}"
                echo "${params.IMAGE_TAG}"
                echo "commit number is ${env.GIT_COMMIT}"


            }
        }
        stage('Setup') {
            steps {
        sh '''
          #echo "server user is ${SERVER_CREDS_USR}"
          #echo "server password is ${SERVER_CREDS_PSW}"
          python3 -m venv venv
          . venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
            }
        }
        stage('Test') {
            steps {
                // sh "pytest"
                // sh "whoami"
        sh '''
          python3 -m venv venv
          . venv/bin/activate
          pytest
          whoami
         
        '''

            }
        }
        stage('Login to docker hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                sh 'echo ${PASSWORD} | docker login -u ${USERNAME} --password-stdin'
                echo 'Login successfully'}
            }
        }
        stage('Build Docker Image')
        {
            steps
            {
                sh 'docker build -t ${IMAGE_TAG} .'
                echo "Docker image build successfully"
                sh "docker images"
            }
        }
        stage('Push Docker Image')
        {
            steps
            {
                sh 'docker push ${IMAGE_TAG}'
                echo "Docker image push successfully"
            }
        }
        // stage('Deploy to EKS Cluster') {
        //     steps {
        //         sh "kubectl apply -f deployment.yaml"
        //         echo "Deployed to EKS Cluster"
        //     }
        // }
    }
}